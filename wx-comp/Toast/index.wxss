/* components/Toast/index.wxss */
.toastContainer {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.pos-bottom {
  position: absolute;
  display: flex;
  bottom: 90rpx;
  width: 100%;
}

.toast {
  margin: 0 auto;
  padding: 20rpx 40rpx;
  max-width: 600rpx;
  font-size: 28rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
  text-align: center;
}

.toast .toast-icon {
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto 10rpx auto;
}
